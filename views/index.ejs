<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD de Personajes - Batman</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Gestión de Personajes de Batman</h2>
        
        <!-- Alertas de error -->
        <% if (locals.errores && errores && errores.length > 0) { %>
            <div class="alert alert-danger">
                <h4 class="alert-heading">Se encontraron errores:</h4>
                <ul>
                    <% errores.forEach(error => { %>
                        <li><%= error %></li>
                    <% }); %>
                </ul>
            </div>
        <% } %>
        
        <!-- Formulario de Registro -->
        <form action="/registrar" method="post" class="mb-4">
            <div class="row">
                <div class="col-md-6">
                    <label for="nombre" class="form-label">Nombre:</label>
                    <input type="text" name="nombre" id="nombre" class="form-control" 
                           value="<%= locals.datos ? datos.nombre : '' %>" required>
                </div>
                <div class="col-md-6">
                    <label for="alias" class="form-label">Alias:</label>
                    <input type="text" name="alias" id="alias" class="form-control" 
                           value="<%= locals.datos ? datos.alias : '' %>" required>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-4">
                    <label for="rol" class="form-label">Rol:</label>
                    <select name="rol" id="rol" class="form-select" required>
                        <option value="">Selecciona...</option>
                        <option value="héroe" <%= locals.datos && datos.rol === 'héroe' ? 'selected' : '' %>>Héroe</option>
                        <option value="villano" <%= locals.datos && datos.rol === 'villano' ? 'selected' : '' %>>Villano</option>
                        <option value="aliado" <%= locals.datos && datos.rol === 'aliado' ? 'selected' : '' %>>Aliado</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="edad" class="form-label">Edad:</label>
                    <input type="number" name="edad" id="edad" class="form-control" 
                           value="<%= locals.datos ? datos.edad : '' %>" required>
                </div>
                <div class="col-md-4">
                    <label for="ciudad" class="form-label">Ciudad:</label>
                    <input type="text" name="ciudad" id="ciudad" class="form-control" 
                           value="<%= locals.datos ? datos.ciudad : '' %>" required>
                </div>
            </div>
            <div class="mt-3">
                <label for="habilidades" class="form-label">Habilidades:</label>
                <input type="text" name="habilidades" id="habilidades" class="form-control" 
                       value="<%= locals.datos ? datos.habilidades : '' %>" required>
            </div>
            <div class="mt-3">
                <label for="descripcion" class="form-label">Descripción:</label>
                <textarea name="descripcion" id="descripcion" class="form-control" rows="3" required><%= locals.datos ? datos.descripcion : '' %></textarea>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Registrar</button>
        </form>

        <!-- Tabla de personajes -->
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Alias</th>
                    <th>Rol</th>
                    <th>Edad</th>
                    <th>Ciudad</th>
                    <th>Habilidades</th>
                    <th>Descripción</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% personajes.forEach(personaje => { %>
                <tr>
                    <td><%= personaje.id %></td>
                    <td><%= personaje.nombre %></td>
                    <td><%= personaje.alias %></td>
                    <td><%= personaje.rol %></td>
                    <td><%= personaje.edad %></td>
                    <td><%= personaje.ciudad %></td>
                    <td><%= personaje.habilidades %></td>
                    <td><%= personaje.descripcion %></td>
                    <td>
                        <div class="d-flex gap-2">
                            <a href="/editar/<%= personaje.id %>" class="btn btn-warning btn-sm">Editar</a>
                            <form action="/eliminar/<%= personaje.id %>" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('¿Eliminar personaje?')">Eliminar</button>
                            </form>
                        </div>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>